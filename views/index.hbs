{{> breadCrumb}}
<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            {{> sideBar}}
            <div class="col-lg-8 col-md-7">
                <div class="row">
                    {{#each blogs}}
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic">
                                <img src="img{{dataValues.imagePath}}" alt="">
                            </div>
                            <div class="blog__item__text">
                                <ul>
                                    <li><i class="fa fa-calendar-o"></i> {{formatDate dataValues.createdAt}}</li>
                                    <li><i class="fa fa-comment-o"></i> {{commentsCount}}</li>
                                </ul>
                                <h5><a href="details.html">{{dataValues.title}}</a></h5>
                                <p> {{first10char dataValues.description}} </p>
                                <a href="/blogs/{{dataValues.id}}" class="blog__btn">READ MORE <span
                                        class="arrow_right"></span></a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <div class="col-lg-12">
                        <div class="product__pagination blog__pagination">
                            <a href=""><i class="fa fa-long-arrow-left" onclick="processPage('prev', event)"></i></a>
                            <a href="" onclick="processPage(1, event)">1</a>
                            <a href="" onclick="processPage(2, event)">2</a>
                            <a href="" onclick="processPage(3, event)">3</a>
                            <a href=""><i class="fa fa-long-arrow-right" onclick="processPage('next', event)"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Section End -->